using System;
using System.Collections.Generic;

class Factory
{
    public string Name { get; set; }
    public string Location { get; set; }
    public int Capacity { get; set; }
    
    public Factory(string name, string location, int capacity)
    {
        Name = name;
        Location = location;
        Capacity = capacity;
    }
    
    public Factory Clone()
    {
        return new Factory(this.Name, this.Location, this.Capacity);
    }
    
    public void Display()
    {
        Console.WriteLine($"{Name} - {Location} ({Capacity})");
    }
}

class Program
{
    static List<Factory> factories = new List<Factory>();
    
    static void Main()
    {
        // Создаем ОДИН основной завод
        Factory mainFactory = new Factory("ГлавныйЗавод", "Столица", 500);
        
        // Создаем 3 клона от основного завода
        factories.Add(mainFactory.Clone());
        factories.Add(mainFactory.Clone());
        factories.Add(mainFactory.Clone());
        
        // Изменяем данные у клонов
        factories[0].Name = "Завод1";
        factories[0].Location = "Город1";
        factories[0].Capacity = 100;
        
        factories[1].Name = "Завод2";
        factories[1].Location = "Город2";
        factories[1].Capacity = 200;
        
        factories[2].Name = "Завод3";
        factories[2].Location = "Город3";
        factories[2].Capacity = 300;
        
        while (true)
        {
            Console.WriteLine("\n1 - Добавить завод\n2 - Показать заводы\n3 - Выход");
            string choice = Console.ReadLine();
            
            if (choice == "1") AddFactory();
            else if (choice == "2") ShowFactories();
            else if (choice == "3") break;
        }
    }
    
    static void AddFactory()
    {
        Console.Write("Название: ");
        string name = Console.ReadLine();
        Console.Write("Местоположение: ");
        string location = Console.ReadLine();
        Console.Write("Мощность: ");
        int capacity = int.Parse(Console.ReadLine());
        
        // Создаем новый завод (не клон)
        Factory newFactory = new Factory(name, location, capacity);
        factories.Add(newFactory);
        Console.WriteLine("Завод добавлен!");
    }
    
    static void ShowFactories()
    {
        Console.WriteLine("\nВсе заводы:");
        foreach (var factory in factories)
        {
            factory.Display();
        }
    }
}